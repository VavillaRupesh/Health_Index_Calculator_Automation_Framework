    <test name="Chrome Browser Testing">
        <parameter name="browser" value="chrome"/>
        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>
        <classes>
            <class name="tests.FormUIValidationTest"/>
            <class name="tests.FormFieldValidationTest"/>
            <class name="tests.ResultUIValidationTest"/>
            <class name="tests.ScoreValidationTest"/>
        </classes>
    </test>

